generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String   @id @default(uuid())
  name     String
  memories Memory[]
}

model Memory {
  id         String    @id @default(uuid())
  title      String
  text       String
  categoryId String?
  Category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}
